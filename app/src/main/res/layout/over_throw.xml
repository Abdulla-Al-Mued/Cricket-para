<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Runs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="18dp"
            />


        <Spinner
            android:id="@+id/out_runs"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/teal_700" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Throw Type"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            />

        <RadioGroup
            android:id="@+id/throw_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@id/right_ball"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/right_ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right-Ball"
                />

            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/without_ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Without-Ball"
                />



        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/over_throw_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:backgroundTint="@color/teal_700"
            />

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="cancel"
            />


    </LinearLayout>

</LinearLayout>